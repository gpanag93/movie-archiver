generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Movie {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  releaseYear Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  watchedMovies WatchedMovie[]
}

model MovieInput {
  id        Int         @id @default(autoincrement())
  rawInput  String
  source    InputSource
  status    InputStatus @default(PENDING) // Enum: PENDING, PROCESSED, FAILED
  
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  userId String?
  user   User?   @relation(fields: [userId], references: [id])
}

enum InputSource {
  IMDB
  TEXT
}

enum InputStatus {
  PENDING
  PROCESSED
  FAILED
}

model User {
  id          String   @id @default(uuid())
  username    String   @unique
  // "text prompt that will contain what kind of movies they like"
  preferences String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  movieInputs   MovieInput[]
  watchedMovies WatchedMovie[]
}

model WatchedMovie {
  id        Int      @id @default(autoincrement())

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  movieId   Int
  movie     Movie    @relation(fields: [movieId], references: [id])

  // "text prompt that will include the user's review of the movie"
  review    String?  @db.Text

  watchedAt DateTime @default(now())

  @@unique([userId, movieId])
}
