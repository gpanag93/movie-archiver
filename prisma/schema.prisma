generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Movie {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  releaseYear Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model MovieInput {
  id        Int         @id @default(autoincrement())
  rawInput  String
  source    InputSource
  status    InputStatus @default(PENDING) // Enum: PENDING, PROCESSED, FAILED
  
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

enum InputSource {
  IMDB
  TEXT
}

enum InputStatus {
  PENDING
  PROCESSED
  FAILED
}
